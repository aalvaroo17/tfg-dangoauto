<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="12dp"
    app:cardBackgroundColor="@color/background_card"
    app:strokeWidth="0dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Imagen del coche con esquinas redondeadas arriba -->
        <ImageView
            android:id="@+id/imageViewCar"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:background="@color/background_secondary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Overlay gradiente para mejor legibilidad -->
        <View
            android:id="@+id/gradientOverlay"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="@drawable/gradient_overlay"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewCar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Badge de precio sobre la imagen -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/badgePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/accent_gold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/textViewCarPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35,900â‚¬"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/background_dark"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp"
                android:letterSpacing="-0.02" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Contenedor de informaciÃ³n -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewCar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Nombre del coche -->
            <TextView
                android:id="@+id/textViewCarName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BMW Serie 3 2022"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:letterSpacing="-0.02"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Especificaciones con iconos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical">

                <!-- AÃ±o -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/spec_badge_background"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“…"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textViewYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2022"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

                <View
                    android:layout_width="8dp"
                    android:layout_height="0dp" />

                <!-- KilÃ³metros -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/spec_badge_background"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ›£ï¸"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textViewKm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15,000 km"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

                <View
                    android:layout_width="8dp"
                    android:layout_height="0dp" />

                <!-- Combustible -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/spec_badge_background"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â›½"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textViewFuel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DiÃ©sel"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Texto auxiliar de specs (oculto pero mantenido por compatibilidad) -->
            <TextView
                android:id="@+id/textViewCarSpecs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022 â€¢ 15,000 km â€¢ DiÃ©sel"
                android:visibility="gone"
                android:textSize="14sp"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
