<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        tools:context=".CarDetailActivity">

        <ImageView
            android:id="@+id/imageViewCar"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:background="@color/background_card"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/textViewCarName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="BMW Serie 3 2022"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            app:layout_constraintTop_toBottomOf="@+id/imageViewCar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/textViewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="35,900€"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/accent_gold"
            app:layout_constraintTop_toBottomOf="@+id/textViewCarName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textViewSpecsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/especificaciones"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            app:layout_constraintTop_toBottomOf="@+id/textViewPrice"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/textViewSpecs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Año: 2022\nKilómetros: 15,000 km\nCombustible: Diésel\nPotencia: 190 CV\nTransmisión: Automático"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:lineSpacingExtra="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewSpecsTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/textViewDescriptionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            app:layout_constraintTop_toBottomOf="@+id/textViewSpecs"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sedán premium con excelente rendimiento y tecnología avanzada."
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:lineSpacingExtra="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewDescriptionTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/textViewFeaturesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/caracteristicas"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            app:layout_constraintTop_toBottomOf="@+id/textViewDescription"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/textViewFeatures"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="• GPS\n• Asientos de cuero\n• Climatizador automático"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:lineSpacingExtra="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewFeaturesTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
